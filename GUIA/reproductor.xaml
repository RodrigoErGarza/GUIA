<Window x:Class="GUIA.reproductor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIA"
        mc:Ignorable="d"
        Title="reproductor" Height="450" Width="800" Background="#FFD3D3D3">
    <Grid Margin="29,62,26,71">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Cancion:  " FontSize="25"/>
            <TextBox x:Name="Dcancion" FontSize="18" Width="300"/>
            <Button  Content="Abrir" Click="d_click_abrir" Background="#FFC0C0C0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Content="Play" FontSize="22" Width="200" Margin="8" Click="d_clickplay" Background="#FFC0C0C0"/>
            <Button Content="Pause" FontSize="22" Width="200" Margin="8" Click="d_clickpausa" Background="#FFC0C0C0"/>
            <Button Content="Stop" FontSize="22" Width="200" Margin="8" Click="d_clickparar" Background="#FFC0C0C0"/>
        </StackPanel>

    </Grid>
</Window>
